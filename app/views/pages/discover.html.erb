<html>
<head>
	<title>Trending</title>
	<link rel="stylesheet" type="text/css" href="style.css">
	<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
	<script type="text/javascript" src="jquery.js"></script>
	<script type="text/javascript" src="blocks.js"></script>
</head>

<body onload="setupBlocks();">
	<!--HEADER-->
	<div class="header">
		<div class="headblock"></div>
		<div class="user pull-right">
			<% if session[:user_id] %>
				<ul>
					<li>Hello <%= @curr_user.fname %>!</li>
					<li style="padding: 5px 2px;">|</li>
					<li><%= link_to "Log Out", logout_path %></li>
				</ul>
			<% else %>
				<ul>
					<li><%= link_to "Log In", login_path %></li>
					<li style="padding: 5px 2px;">|</li>
					<li><%= link_to "Register", register_path %></li>
				</ul>
			<% end %>
			<% end %>
		</div>
		<div class="nav headroom">
			<div class="container">
				<div class="nav-collapse">
					<div class="logo navbar-nav pull-left">City Birds Logo</div>
					<ul class="navbar-nav pull-right">
						<li><a href="index.html">Home</a></li>
						<li><a href="trending.html">Trending</a></li>
						<li><a href="new.html">What's New</a></li>
						<li class="active"><a href="discover.html">Discover</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!--HEADER END-->
	<div>
		<div class="userdiv">
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 1</div></div>
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 2</div></div>
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 3</div></div>
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 4</div></div>
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 5</div></div>
            <div class="columndiv"><div class="square"><%= image_tag("unknown.png", width: '150', height: '150', class: "circle")%><br>User 6</div></div>
        </div>
	</div>

		<!--FOOTER-->

		<div class="sticky-controls">
				<div class="wrap">
					<div class="controls pull-left">
						<li><%= link_to image_tag("addition6.png"), "#openModal" %></li>
					</div>
				</div>

				<div id="openModal" class="modalDialog">
					<div>
						<a href = "#close" title = "Close" class = "close"> x </a>
						<h3>Upload New Post</h3>
						<div class="post-types">
							<div>
								<li><%= link_to image_tag("camera-icon.png") %></li>
								<li><%= link_to image_tag("video-icon.png") %></li>
							</div>
							<div>
								<label style="padding-left:15px;">PHOTO</label>
								<label style="padding-left:20px;">VIDEO</label>
							</div>
						</div>

						<div class="hidden-input">
							<label>TITLE:</label>
							<input type="text">
							<button>SUBMIT</button>
							<br>
						</div>

						<div class="submit">
							<li><%= link_to image_tag("checkmark.png") %></li>
							<label>SUBMMITED!</label>
						</div>
					</div>
				</div>
		</div>
	<!--end footer-->
</body>
</html>