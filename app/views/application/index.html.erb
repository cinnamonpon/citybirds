<html>
<head>
	<title>HOME</title>
	<link rel="stylesheet" type="text/css" href="style.css">
	<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
</head>

<body>

	<!--HEADER-->
	
	<div class="header">
		<div class="headblock"></div>
		<div class="user pull-right">
			<% if session[:user_id] %>
				<ul>
					<li>Hello <%= @curr_user.fname %>!</li>
					<li style="padding: 5px 2px;">|</li>
					<li><%= link_to "Log Out", logout_path %></li>
				</ul>
			<% else %>
				<ul>
					<li><%= link_to "Log In | Register", login_path %></li>
				</ul>
			<% end %>
		</div>
		<div class="nav headroom">
			<div class="container">
				<div class="nav-collapse">
					<div class="logo navbar-nav pull-left">City Birds</div>
					<ul class="navbar-nav pull-right">
						<li class="active"><a href="index.html">Home</a></li>
						<li><a href="#Trending">Trending</a></li>
						<li><a href="#New">What's New</a></li>
						<li><a href="#Discover">Community</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!--HEADER END-->

	<div>
		<div class="container">
			<a name="Home"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text pull-right">HOME</div>
					<div class="img-home pull-left"><%=image_tag ("citybird-img.png") %>
					</div>
				</div>
			</div>
			<a name="Trending"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:740px;">TRENDING</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div class="leftDIV">
					    <% if @trends[0] %>
					    	<%if @trends[0].mtype.start_with?('image') %>
								<%= image_tag(@trends[0].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@trends[0], size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					    <% end %>
					    </div>
					    <div class="middleDIV">
					    <% if @trends[1] %>
					    	<%if @trends[1].mtype.start_with?('image') %>
								<%= image_tag(@trends[1].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@trends[1].dir, size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					    <% end %>
					    </div>
					    <div class="rightDIV">
					    <% if @trends[2] %>
					    	<%if @trends[2].mtype.start_with?('image') %>
								<%= image_tag(@trends[2].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@trends[2], size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					    <% end %>
					    </div>
					</div>
					<a href="/trending" ><div id="triangle-down"></div></a>
				</div>
			</div>
			<a name="New"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:755px; font-size:60px; margin-top:70px;">WHAT'S NEW</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div style="background:#FFCC33;"class="leftDIV">
					    <% if @new_posts[0] %>
						    <%if @new_posts[0].mtype.start_with?('image') %>
								<%= image_tag(@new_posts[0].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@new_posts[0], size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					   	<% end %>
					    </div>
					    <div style="background:#FFCC33;" class="middleDIV">
					    <% if @new_posts[1] %>
					    	<%if @new_posts[1].mtype.start_with?('image') %>
								<%= image_tag(@new_posts[1].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@new_posts[1], size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					   	<% end %>	
					    </div>
					    <div style="background:#FFCC33;" class="rightDIV">
					    <% if @new_posts[2] %>
					    	<%if @new_posts[0].mtype.start_with?('image') %>
								<%= image_tag(@new_posts[3].dir,  size: "200x200") %>
							<% else %>
								<%= video_tag(@new_posts[3], size: "200x200", autoplay: "autoplay", loop: "loop") %>
							<% end %>
					   	<% end %>
					    </div>
					</div>
					<a href="/new" ><div id="triangle-down"></div></a>
				</div>
			</div>
			<a name="Discover"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:650px;">COMMUNITY</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div style="background:red;"class="leftDIV">
					    <%=image_tag ("2.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
						</div>
					    <div style="background:red;" class="middleDIV">
					    <%=image_tag ("4.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
					    </div>
					    <div style="background:red;" class="rightDIV">
					    <%=image_tag ("6.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
					    </div>
					</div>
					<a href="/discover"> <div id="triangle-down"></div></a>
				</div>
			</div>
		</div>
	</div>

	<!--FOOTER-->
	<% if session[:user_id] %>
		<div class="sticky-controls">
				<div class="wrap">
					<div class="controls pull-left">
						<li><%= link_to image_tag("addition6.png"), "#openModal" %></li>
					</div>
				</div>

				<div id="openModal" class="modalDialog">
					<div>
						<a href = "#close" title = "Close" class = "close"> x </a>
						<h3>Upload New Post</h3>

						<%= form_tag('/upload', :multipart => true) do %>

							<div class="post-types">

								<label class="filebutton">
									<%= image_tag("camera-icon.png") %>
									<span><%= file_field_tag :post, :class => "upload", :accept => ".png,.jpg,.gif,.bmp" %></span>
								</label>
								<label class="filebutton">
									<%= image_tag("video-icon.png")  %>
									<span><%= file_field_tag :post, :class => "upload", :accept => ".mp4,.wav,.avi,.mov"%></span>
								</label>

								<div>
									<label style="padding:25px;">PHOTO</label>
									<label style="padding:25px;">VIDEO</label>
								</div>
								<label id="filename" style="padding:5px; font-size:12px; color:gray;"></label>

							</div>

		        			<div class="hidden-input" style="visibility:hidden;">
								<label>TITLE:</label>
								<%= text_field_tag 'title', nil, placeholder: 'Title' %>
								<span id="error"></span>
								<%= submit_tag "UPLOAD", :id => "sub", :style => "padding:0px;"%>
								<br>
							</div>
	
							<div class="submit" style="visibility:hidden;">
								<li><%= image_tag("checkmark.png") %></li>
								<label>SUBMITTED!</label>
							</div>
	        				
	        			<% end %>

				</div>
		</div>
	<% end %>
	<!--end footer-->

	<div id="viewModal" class="viewDialog">
		<div>
			<a href = "#close" title = "Close" class = "close"> x </a>
			<h3 style="position:absolute;">
				<%if @curr_post.present?%>
					<%= @curr_post.title %>
				<% end %>
			</h3>
			<a href="JavaScript:newPopup('http://www.facebook.com/sharer/sharer.php?u=<%=request.original_url + '#viewModal'%>');"><%= image_tag ("facebook-share-button.png"), {:class => "user-small pull-right"} %></a>
			
			<div class="media-box">
				<%if @curr_post %>
					<%if @curr_post.mtype.start_with?('image') %>
						<%= image_tag(@curr_post.dir,  size: "340x340") %>
					<% else %>
							<%= video_tag(@curr_post.dir, size: "340x340", autoplay: "autoplay", loop: "loop") %>
					<% end %>
					
				<% end %>
			</div>

			<div class="user-info-box">
				<%=image_tag ("2.PNG"), {:class => "user-small"} %>
				<label>
					<% if @curr_user %>
						<%= @curr_user.fname %>
					<% end %>
				</label>
			</div>

			<div class="comment-box">
				<!--NEW USER COMMENT-->
				Comments
				<div class="user-comments">
					<%=image_tag ("2.PNG"), {:class => "user-small"} %>
					<div class="comment">WHATEVER COMMENT THE USER HAS INPUT. Trying a longer version. :)</div>
				</div>

				<div class="user-comments">
					<%=image_tag ("4.PNG"), {:class => "user-small"} %>
					<div class="comment">WHATEVER COMMENT THE USER HAS INPUT. Trying a longer version. :)</div>
				</div>

				<div class="user-comments">
					<%=image_tag ("6.PNG"), {:class => "user-small"} %>
					<div class="comment">WHATEVER COMMENT THE USER HAS INPUT. Trying a longer version. :)</div>
				</div>
			</div>

			<div class="add-comment">
				<input type= "text" value="Leave a comment..."
				onfocus="(this.value == 'Leave a comment...') && (this.value = '')"
					onblur="(this.value == '') && (this.value = 'Leave a comment...')" >
					<%=image_tag ("thumb12.png"), {:class => "like pull-right"} %>
			</div>
		</div>
	</div>
</body>
</html>