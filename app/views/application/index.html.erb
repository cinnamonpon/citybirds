<html>
<head>
	<title>HOME</title>
	<link rel="stylesheet" type="text/css" href="style.css">
	<link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
</head>

<body>

	<!--HEADER-->
	
	<div class="header">
		<div class="headblock"></div>
		<div class="user pull-right">
			<% if session[:user_id] %>
				<ul>
					<li>Hello <%= @curr_user.fname %>!</li>
					<li style="padding: 5px 2px;">|</li>
					<li><%= link_to "Log Out", logout_path %></li>
				</ul>
			<% else %>
				<ul>
					<li><%= link_to "Log In | Register", login_path %></li>
				</ul>
			<% end %>
		</div>
		<div class="nav headroom">
			<div class="container">
				<div class="nav-collapse">
					<d\iv class="logo navbar-nav pull-left">City Birds Logo</div>
					<ul class="navbar-nav pull-right">
						<li class="active"><a href="index.html">Home</a></li>
						<li><a href="#Trending">Trending</a></li>
						<li><a href="#New">What's New</a></li>
						<li><a href="#Discover">Community</a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<!--HEADER END-->

	<div>
		<div class="container">
			<a name="Home"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text pull-right">HOME</div>
					<div class="img-home pull-left"><%=image_tag ("citybird-img.png") %>
					</div>
				</div>
			</div>
			<a name="Trending"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:740px;">TRENDING</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div class="leftDIV tv"></div>
					    <div class="middleDIV tv"></div>
					    <div class="rightDIV tv"></div>
					</div>
				</div>
			</div>
			<a name="New"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:755px; font-size:60px; margin-top:70px;">WHAT'S NEW</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div style="background:#FFCC33;"class="leftDIV tv"></div>
					    <div style="background:#FFCC33;" class="middleDIV tv"></div>
					    <div style="background:#FFCC33;" class="rightDIV tv"></div>
					</div>
				</div>
			</div>
			<a name="Discover"></a>
			<div class="content">
				<div class="inner-content center-align">
					<div class="headroom"></div>
					<div class="banner">
						<%=image_tag ("blueblank-ribbon.png"), {:class => "banner"} %>
					</div>	
					<div class="banner-text" style="margin-left:650px;">COMMUNITY</div>
					<!--POSTS-->
					<div class="mainDIV">
					    <div style="background:red;"class="leftDIV">
					    <%=image_tag ("2.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
						</div>
					    <div style="background:none;" class="middleDIV tv">
					    <%=image_tag ("4.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
					    </div>
					    <div style="background:none;" class="rightDIV tv">
					    <%=image_tag ("6.PNG"), {:class => "user-badge"} %>
					    	<div class="name"></div>
					    </div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!--FOOTER-->
	<% if session[:user_id] %>
		<div class="sticky-controls">
				<div class="wrap">
					<div class="controls pull-left">
						<li><%= link_to image_tag("addition6.png"), "#openModal" %></li>
					</div>
				</div>

				<div id="openModal" class="modalDialog">
					<div>
						<a href = "#close" title = "Close" class = "close"> x </a>
						<h4>Upload Post</h4><hr><br>

					
						<%= form_tag('/upload', :multipart => true) do %>
							<%= text_field_tag 'desc', nil, placeholder: 'Title' %><br>
							<div class="fileUpload btn btn-primary">			
								<input id="uploadFile" placeholder="No File Chosen" disabled="disabled" />
								<button class="submit">Choose File</button>

		        				<%= file_field_tag :post, :class => "upload" %>
		        			</div><br>
		        			<span id="error"></span><br>
	        				<%= submit_tag "Upload", :id => "sub", :class => "submit", :style => "padding: 2px 4px 2px 4px;"%>
	        			<% end %>
		        		
					</div>
				</div>
		</div>
	<% end %>
	<!--end footer-->
</body>
</html>